{
  "version": 2,
  "buildCommand": "cd admin-panel && npm run build",
  "outputDirectory": "admin-panel/build",
  "installCommand": "(cd \"auto blog-appv1\" && npm install --legacy-peer-deps) && (cd admin-panel && npm install --legacy-peer-deps)",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/index.js"
    },
    {
      "source": "/admin/:path*",
      "destination": "/admin-panel/build/:path*"
    },
    {
      "source": "/admin",
      "destination": "/admin-panel/build/index.html"
    },
    {
      "source": "/",
      "destination": "/auto blog-appv1/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/auto blog-appv1/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}

